{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES5",
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "pretty": true,
        "lib": [
            "es7"
        ],
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "exclude": [
        "./dist",
        "node_modules",
        "**/*.spec.ts"
    ],
}